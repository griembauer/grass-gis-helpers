# F821 undefined name '_'

exclude = .git

max-line-length = 80

per-file-ignores =
    ./src/grass_gis_helpers/mapset.py: F821
    ./src/grass_gis_helpers/parallel.py: F821
    ./src/grass_gis_helpers/tiling.py: F821
